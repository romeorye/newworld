	<bean id="globalPolicy" class="devonframe.fileupload.policy.DefaultFileUploadPolicy">
	    <!-- LOCAL -->
		<property name="uploadTargetDir" value="file:C:/weblogic/user_projects/domains/iris_domain/fileupload/default" />
